
<div class="ChatButton">
    <img src="~/Content/icons8-Chat-50.png" height="20" width="20" />
    <span class="spnChat">Need help?</span>
</div>
<div class="ChatMain">
    <div class="ChatHeader">
        <div class="dropup">
            <div class="row">
                <div class="col-sm-8">
                    <img src="~/Content/icons8-Chat-50.png" height="20" width="20" />
                    <span class="spnChat">Need help?</span>
                </div>
                <div class="col-sm-4" style="text-align:right;">
                    <span id="lnkStartEndConv" class="glyphicon circle" title="Disconnected">&#9679;</span>
                    @*<button class="btnSettings glyphicon glyphicon-cog dropdown-toggle" data-toggle="dropdown" title="Settings"></button>*@
                    <button class="btnMinimize glyphicon glyphicon-minus" title="Expand/Collapse"></button>
                    <button id="lnkEndCov" class="glyphicon glyphicon-remove" title="End chat"></button>
                    @*<ul class="dropdown-menu" role="menu">
                            <li><a id="lnkStartEndConv" href="#">Start Conversation</a></li>
                            <li><a id="lnkClear" href="#">Clear chat</a></li>
                        </ul>*@
                </div>
            </div>
        </div>
    </div>
    <div class="ChatBody">
        <div class="ChatArea">
        </div>
        <div class="ChatControls">
            <input id="txtInput" type="text" placeholder="Type your message here..." />
            <button id="btnSend" title="Send message">Send</button>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/ChatWindow.js"></script>
}
